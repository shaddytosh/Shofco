<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chuna" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="font">@font/pt_sans_regular</item>
        <item name="fontFamily">@font/pt_sans_regular</item>
        <item name="bottomSheetDialogTheme">@style/CustomBottomSheetDialog</item>

        <!-- Customize your theme here. -->
    </style>


    <style name="HomePageBackground">
        <item name="android:background">@drawable/homepage_gradient</item>
    </style>

</resources>