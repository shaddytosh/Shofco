<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/base_cardview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:backgroundTint="@color/white"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        app:strokeColor="@color/primary"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Loan Type -->
            <TextView
                android:id="@+id/tvLoanType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loan Type: EMER"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:textSize="16sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Loan Purpose -->
            <TextView
                android:id="@+id/tvLoanPurpose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Purpose: EMERGENCY LOAN"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/tvLoanType"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp"/>

            <!-- Requested Amount -->
            <TextView
                android:id="@+id/tvRequestedAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Requested: KES 50,000"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/tvLoanPurpose"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <!-- Installment -->
            <TextView
                android:id="@+id/tvInstallment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Installment: 0"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/tvRequestedAmount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>

            <!-- View Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/primary"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:cornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvInstallment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
