<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeToRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ThemeOverlay.MaterialComponents.Toolbar.Surface"
            app:title="Money Transfer"
            app:titleTextColor="@color/primary"
            app:navigationIconTint="@color/primary"
            android:background="@color/background"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="?actionBarSize">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ll_loading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:lottie_loop="true"
                            app:lottie_autoPlay="true"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/loading_animation"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/size_20"
                            android:textSize="18sp"
                            android:text="@string/select_source_account"
                            android:textColor="?colorOnSurface"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_spinner_source_account"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/source_account"
                            android:orientation="horizontal"
                            app:hintTextColor="@color/primary_to_white"
                            android:backgroundTint="@color/primary_to_white"
                            android:layout_marginStart="@dimen/size_20"
                            android:layout_marginTop="@dimen/size_8"
                            android:layout_marginEnd="@dimen/size_20">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_source_account"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:textColor="@color/primary_to_white"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/size_20"
                            android:textSize="18sp"
                            android:text="@string/select_destination_account"
                            android:textColor="?colorOnSurface"/>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_spinner_destination_account"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/destination_account"
                            android:orientation="horizontal"
                            android:textSize="16sp"
                            app:hintTextColor="@color/primary_to_white"
                            android:backgroundTint="@color/primary_to_white"
                            android:layout_marginStart="@dimen/size_20"
                            android:layout_marginBottom="@dimen/size_20"
                            android:layout_marginTop="@dimen/size_8"
                            android:layout_marginEnd="@dimen/size_20">

                            <AutoCompleteTextView
                                android:id="@+id/spinner_destination_account"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="none"
                                android:textColor="@color/primary_to_white"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_20"
                            android:layout_marginEnd="@dimen/size_20"
                            android:layout_marginTop="@dimen/size_20"
                            android:layout_marginBottom="@dimen/size_20"
                            app:hintTextColor="@color/primary_to_white"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:visibility="gone">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/txt_amount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/amount"
                                android:inputType="number"/>

                        </com.google.android.material.textfield.TextInputLayout>


                        <TextView
                            android:id="@+id/tv_transfer"
                            style="@style/NHIFActionTextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/size_20"
                            android:visibility="gone"
                            android:backgroundTint="@color/primary"
                            android:text="@string/confirm_transfer"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/size_20"
                        android:visibility="gone">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:lottie_loop="false"
                            app:lottie_autoPlay="true"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/not_found"/>

                        <TextView
                            android:id="@+id/tv_not_found_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_24"
                            android:layout_marginEnd="@dimen/size_24"
                            android:text="@string/no_accounts_found"
                            android:gravity="center"
                            android:singleLine="false"
                            android:textColor="?colorOnSurface"
                            android:layout_marginTop="@dimen/size_20"
                            android:layout_marginBottom="@dimen/size_20"/>

                        <TextView
                            android:id="@+id/btn_go_back"
                            style="@style/NHIFActionTextButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_24"
                            android:layout_marginEnd="@dimen/size_24"
                            android:layout_marginTop="@dimen/size_24"
                            android:layout_marginBottom="@dimen/size_24"
                            android:backgroundTint="@color/primary"
                            android:text="@string/go_back" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>