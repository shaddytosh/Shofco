<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet"
    app:layout_behavior="@string/bottom_sheet_behavior"
    app:behavior_peekHeight="96dp"
    app:behavior_hideable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/need_help"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/_20px"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_call"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginEnd="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_8"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="@dimen/size_20"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="0.5dp">

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_phone_48"
                        android:background="@drawable/background_transparent"
                        android:contentDescription="@string/deposits"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:focusable="false"
                        app:tint="@color/primary"/>

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginEnd="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_8"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="@dimen/size_20"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="0.5dp">

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_email_48"
                        android:background="@drawable/background_transparent"
                        android:contentDescription="@string/deposits"
                        android:layout_gravity="center"
                        android:clickable="false"
                        app:tint="@color/primary"
                        android:focusable="false"/>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    android:layout_marginStart="@dimen/size_20"
                    android:layout_marginEnd="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_8"
                    app:cardCornerRadius="8dp"
                    android:layout_marginBottom="@dimen/size_20"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:focusable="true"
                    app:strokeColor="@color/primary"
                    app:strokeWidth="0.5dp">

                    <ImageButton
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/baseline_location_on_48"
                        android:background="@drawable/background_transparent"
                        android:contentDescription="@string/deposits"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:focusable="false"
                        app:tint="@color/primary" />

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/values"
                android:layout_margin="@dimen/_20px"
                android:textAlignment="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
