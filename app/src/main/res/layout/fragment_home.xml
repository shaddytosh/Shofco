<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="?bottomNavigationStyle">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/coordinator">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:elevation="0dp"
            app:elevation="0dp"
            android:background="@color/transparent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/primary"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                app:titleEnabled="false">

                <LinearLayout
                    android:id="@+id/linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseParallaxMultiplier="0.7"
                    app:layout_collapseMode="parallax">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="0dp"
                        app:cardBackgroundColor="@color/primary">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="0dp">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_greetings"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="@string/dashes"
                                android:gravity="center"
                                android:textColor="@color/white_day_night"
                                android:layout_marginTop="@dimen/_8px"
                                android:textAppearance="?attr/textAppearanceSubtitle1"
                                app:layout_constraintTop_toTopOf="parent"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_first_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white_day_night"
                                android:text="@string/dashes"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_marginTop="@dimen/size_8"
                                app:layout_constraintTop_toBottomOf="@id/tv_greetings"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_balance_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white_day_night"
                                android:text="@string/dashes"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:layout_marginTop="@dimen/size_8"
                                app:layout_constraintTop_toBottomOf="@id/tv_first_name"/>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_view_balances"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardElevation="0dp"
                                android:outlineProvider="none"
                                app:cardCornerRadius="@dimen/size_16"
                                android:clickable="false"
                                android:focusable="false"
                                app:cardBackgroundColor="@color/white"
                                android:layout_marginEnd="@dimen/size_20"
                                android:layout_marginStart="@dimen/size_20"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tv_balance_view">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:padding="16dp"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/tvShowBalance"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            tools:text="KES 3,700"
                                            android:textSize="22sp"
                                            android:visibility="invisible"/>

                                        <TextView
                                            android:id="@+id/tvHideBalance"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            tools:text="KES 3,700"
                                            android:textSize="22sp"/>

                                        <ImageView
                                            android:id="@+id/iv_show_balance"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/baseline_remove_red_eye_24"
                                            android:layout_marginStart="8dp"
                                            android:layout_toEndOf="@id/tvShowBalance"
                                            android:layout_centerVertical="true"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:background="?selectableItemBackground"
                                            app:tint="?colorControlNormal"/>

                                        <ImageView
                                            android:id="@+id/iv_hide_balance"
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:src="@drawable/eye_off_svgrepo_com"
                                            android:layout_marginStart="8dp"
                                            android:layout_toEndOf="@id/tvShowBalance"
                                            android:layout_centerVertical="true"
                                            android:clickable="true"
                                            android:focusable="true"
                                            android:background="?selectableItemBackground"
                                            app:tint="?colorControlNormal"
                                            android:visibility="invisible"/>
                                    </RelativeLayout>

                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>


                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/ThemeOverlay.MaterialComponents.Toolbar.Surface"
                    app:titleTextColor="@color/white"
                    android:background="@color/primary"
                    app:contentInsetLeft="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin"
                    app:titleCentered="true"
                    app:contentInsetStartWithNavigation="0dp"/>
            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollerCartActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cardview_rounded_bottom_corners">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardElevation="4dp"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginEnd="@dimen/size_20"
                        android:layout_marginTop="@dimen/size_8"
                        android:outlineProvider="none"
                        app:cardCornerRadius="8dp"
                        android:layout_marginBottom="@dimen/size_20"
                        app:strokeWidth="0.5dp"
                        app:strokeColor="@color/primary">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/_10px"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent">

                            <include
                                android:id="@+id/partial_action"
                                android:layout_height="wrap_content"
                                android:layout_width="match_parent"
                                layout="@layout/partial_action"/>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:text="@string/transactions"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/guideline"
                        app:layout_constraintTop_toBottomOf="@+id/view" />


                    <include
                        android:id="@+id/layout_two"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        layout="@layout/layout_two_alt"/>


                    <include
                        android:id="@+id/layout_three"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        layout="@layout/layout_three_alt"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="@dimen/size_8">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="@string/recent_transactions"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:layout_weight="1"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/tv_view_all"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="textEnd"
                            android:text="@string/view_all"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/size_8"
                            android:background="?selectableItemBackground"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_8px"
                        android:layout_marginBottom="@dimen/_8px">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/statementRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            tools:listitem="@layout/item_recent_transactions"
                            android:clipToPadding="false"
                            tools:itemCount="3"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_empty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_8px">

                        <com.airbnb.lottie.LottieAnimationView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:lottie_loop="false"
                            app:lottie_autoPlay="false"
                            android:layout_gravity="center"
                            app:lottie_rawRes="@raw/not_found"/>

                        <TextView
                            android:id="@+id/tv_not_found_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_24"
                            android:layout_marginEnd="@dimen/size_24"
                            android:text="@string/no_recent_transactions"
                            android:gravity="center"
                            android:singleLine="false"
                            android:layout_marginTop="@dimen/size_20"
                            android:layout_marginBottom="@dimen/size_20"/>


                    </LinearLayout>


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/llFeature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="?actionBarSize"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/deals"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginStart="16dp"
                            android:text="@string/our_sectors"
                            android:textColor="?colorControlNormal"
                            android:textSize="16sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <org.imaginativeworld.whynotimagecarousel.ImageCarousel
                            android:id="@+id/carousel"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginStart="@dimen/_20px"
                            android:layout_marginTop="@dimen/_10px"
                            android:layout_marginEnd="@dimen/_20px"
                            app:showCaption="false"
                            app:layout_constraintTop_toBottomOf="@id/deals"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
