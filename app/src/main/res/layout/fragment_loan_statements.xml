<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeToRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rootActivityCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@drawable/baseline_arrow_back_24"
            app:navigationIconTint="@color/white"
            style="@style/ThemeOverlay.MaterialComponents.Toolbar.Surface"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Loan Statements"
            app:titleTextColor="@color/white"
            android:background="@color/primary">
            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_home_24"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/size_20"
                app:tint="@color/primary" />

        </com.google.android.material.appbar.MaterialToolbar>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollerCartActivity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:visibility="gone"
                    android:indeterminateTint="@color/primary"/>

                <LinearLayout
                    android:id="@+id/ll_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_20">

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_20"
                        android:layout_marginEnd="@dimen/size_24"
                        tools:text="ACCOUNT"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/size_20"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/statementRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_statement"
                        android:clipToPadding="false"
                        tools:itemCount="8"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:lottie_loop="true"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_rawRes="@raw/loading_animation"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/size_20"
                    android:visibility="gone">

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:lottie_loop="false"
                        app:lottie_autoPlay="true"
                        android:layout_gravity="center"
                        app:lottie_rawRes="@raw/not_found"/>

                    <TextView
                        android:id="@+id/tv_not_found_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_24"
                        android:layout_marginEnd="@dimen/size_24"
                        android:text="@string/no_loan_statement_found"
                        android:gravity="center"
                        android:singleLine="false"
                        android:textColor="?colorOnSurface"
                        android:layout_marginTop="@dimen/size_20"
                        android:layout_marginBottom="@dimen/size_20"/>

                    <TextView
                        android:id="@+id/btn_go_back"
                        style="@style/NHIFActionTextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_24"
                        android:layout_marginEnd="@dimen/size_24"
                        android:layout_marginTop="@dimen/size_24"
                        android:layout_marginBottom="@dimen/size_24"
                        android:backgroundTint="@color/primary"
                        android:text="@string/go_back" />

                </LinearLayout>

            </LinearLayout>


        </androidx.core.widget.NestedScrollView>


    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
